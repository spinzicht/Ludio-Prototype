<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- colors -->
    <Color x:Key="DarkGrey">#333</Color>
    <Color x:Key="LightGrey">#EEE</Color>

    <!-- brushes -->
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="{StaticResource LightGrey}"/>
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="{StaticResource LightGrey}"/>
    <SolidColorBrush x:Key="ButtonBackgroundHoverColor" Color="{StaticResource DarkGrey}" Opacity="0.3"/>
    
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="{StaticResource DarkGrey}"/>

    <SolidColorBrush x:Key="TextBlockForegroundColor" Color="{StaticResource DarkGrey}"/>

</ResourceDictionary>