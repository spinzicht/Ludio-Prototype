<UserControl x:Class="Ludio.Dashboard.Cards.TutorialCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ludio.Dashboard"
             mc:Ignorable="d" 
             Height="120" Width="260">
    <Grid Margin="10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{Binding Thumbnail}" Margin="10"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding Tutor.Name}"/>
                <TextBlock Text="{Binding Program.Name}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
