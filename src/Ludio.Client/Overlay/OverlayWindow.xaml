<Window x:Class="Ludio.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ludio.Overlay"
        mc:Ignorable="d"
        Title="Ludio Overlay" 
        d:DesignHeight="450" d:DesignWidth="800" 
        AllowsTransparency="True"
        Topmost="True" WindowStyle="None"
        Background="{DynamicResource WindowBackgroundColor}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="35" GlassFrameThickness="0 0 0 0" ResizeBorderThickness="3" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="ToggleButton" Click="SwitchButton_Click"
                    WindowChrome.IsHitTestVisibleInChrome="True"
                    Width="40" Height="30">~</Button>
            <Button x:Name="CloseButton" Click="CloseButton_Click"
                    WindowChrome.IsHitTestVisibleInChrome="True"
                     Width="40" Height="30">X</Button>
        </StackPanel>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Overlay</TextBlock>
    </Grid>
</Window>
